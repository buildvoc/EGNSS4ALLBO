{% extends "base.html.twig" %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
<h2>{{ pa_name }} - management </h2>

<div class="w-100">
  <a href="{{ ret_url }}" class="btn primary text-capitalize pl-0"><i class="fas fa-chevron-left mr-2"></i>{{ back|upper }}</a>
  <button class="js_new_task_type_show mt-2 mb-2 btn btn-primary" data-userid="0" data-formheader="New Purpose">NEW PURPOSE</button>
  <div class="js_new_task_type_inputs box_dropdown">
    <h2 id="js_fi_header">{{ new_farmer_header }}</h2>
    <form id="new_task_type_form" method="POST" action="index.php">
    <input type="hidden" name="act" id="js_fi_act" value="new_task_type">
    <input type="hidden" class="not_clear" name="role" id="js_fi_role" value="2">
    <input type="hidden" name="user_id" id="js_fi_uid" value="0">
      <table class="form_table">
        <thead>
          <tr>
            <td><label>{{name}}</label><input id="js_fi_name" type="text" name="name" required></td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><label class="not_required">Description</label>
                <textarea id="js_fi_description" name="description" rows="4" cols="40" ></textarea>
                
                
            </td>
          </tr>
          <tr>
            <td>
              <button class="js_new_task_type btn btn-primary mt-3" type="submit">{{ save|upper }}</button>
              <button class="js_button_close_task_type_edit btn btn-outline-secondary ml-2 mt-3" type="button">{{ close|upper }}</button>
            </td>
          </tr>
        </tbody>
      </table>
    </form>
  </div>
  <div class="table_cont mt-3">
    <table class="w-100 table float-md-left js_table table_responsive">
      <thead>
        <tr>
          <th>{{ officer_name_text }}</th>
          <th>{{ officer_actions_text }}</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>
<!--Created for the GSA in 2020-2021. Project management: SpaceTec Partners, software development: www.foxcom.eu-->
{% endblock %}
